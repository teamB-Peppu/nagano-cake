<div class="container">
  <div class="row">  
    <div class="col">
      <h4 class="font-weight-bold">注文履歴一覧</h4>
      <table class="table table-hover mx-auto">
        <thead>
          <tr>
            <th class="font-weight-bold">購入日時</th>
            <th class="font-weight-bold">購入者</th>
            <th class="font-weight-bold">注文個数</th>
            <th class="font-weight-bold">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do|order| %>
          <tr>
            <td>
               <%= link_to order.created_at.strftime('%Y-%m-%d %H:%M'), admin_order_path(order), class: 'text-primary' %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.amount %></td>
            <td><%= order.status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>    
      <%= paginate @orders %>
     </div>
    </div>  
  </div>        

