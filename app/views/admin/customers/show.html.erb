<div class="container">
    <div class="row">
        <div class="col">
            <h4><%= @customer.name%>さんの会員詳細</h4>
            <table class="table table-borderless my-5 w-75"> 
                <tr>
                    <td class="font-weight-bold">会員id </td>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <td class="font-weight-bold">氏名 </td>
                    <td><%= @customer.name %></td>
                </tr>
                <tr>
                     <td class="font-weight-bold">フリガナ </td>
                     <td><%= @customer.name_kana %></td>
                </tr>
                <tr>
                    <td class="font-weight-bold">郵便番号 </td>
                    <td><%= @customer.postal_code %></td>
                </tr>
                <tr>
                    <td class="font-weight-bold">住所 </td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td class="font-weight-bold">電話番号 </td>
                    <td><%= @customer.telephone_number %></td>
                </tr>
                <tr>
                    <td class="font-weight-bold">メールアドレス </td>
                    <td><%= @customer.email %></td>
                </tr>  
                <tr>
                     <td class="font-weight-bold">会員ステータス </td>
                     <td class="<%= @customer.is_active? ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %> "><%= @customer.customer_status %></td>
                </tr> 
                <tr>
                    <td></td>
                    <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success"%></td>
                    <td> <%= link_to "注文履歴一覧を見る", admin_admin_path, class: "btn btn-primary"%></td>
                </tr>
            </table>
        </div>
    </div>
</div>        
                  
              