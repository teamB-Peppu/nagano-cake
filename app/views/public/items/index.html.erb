<h2>商品一覧（全<%= @quantity %>件）</h2>

<div>
  <% @items.each do |item| %>
  <div>
    <%= link_to public_item_path(item.id) do %>
      <%= attachment_image_tag item, :image, size: "170x170" %>
   <% end %>
    <p><%= item.item_name %></p>
    <p>¥<%= (item.unit_price_without_tax*1.1).floor %></p>
  </div>
  <% end %>
</div>