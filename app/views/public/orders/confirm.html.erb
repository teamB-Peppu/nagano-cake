<div class="container pt-5">
  <div class="row">
    <div class="col-md-8">
      <h3>注文情報入力</h3>
      <%= form_with model: @, method: :post, local: true do |f| %>
      <div class="form-group">
        <h5>支払方法</h5>
        <div class="form-check">
          <%= f.radio_button :payment_method, 'credit_card', checked: @customer.payment_method == 'credit_card', class: 'custom-control-input', id: 'payment-method-credit-card' %>
          <%= f.label :payment_method, 'クレジットカード', class: 'custom-control-label', for: 'payment-method-credit-card' %>
        </div>
        <div class="form-check">
          <%= f.radio_button :payment_method, 'bank_transfer', checked: @customer.payment_method == 'bank_transfer', class: 'custom-control-input', id: 'payment-method-bank-transfer' %>
          <%= f.label :payment_method, '銀行振込', class: 'custom-control-label', for: 'payment-method-bank-transfer' %>
        </div>
      </div>
      
      <div class="form-group">
        <h5>お届け先</h5>
        <div class="form-check">
          <%= f.radio_button :delivery_address, 'your_address', checked: @customer.delivery_address == 'your_address', class: 'custom-control-input', id: 'delivery-address-your-address' %>
          <%= f.label :delivery_address, 'ご自身の住所', class: 'custom-control-label', for: 'delivery-address-your-address' %>
        </div>
        <div class="form-check">
          <%= f.radio_button :delivery_address, 'registered_address', checked: @customer.delivery_address == 'registered_address', class: 'custom-control-input', id: 'delivery-address-registered-address' %>
          <%= f.label :delivery_address, '登録住所', class: 'custom-control-label', for: 'delivery-address-registered-address' %>
        </div>
        <div class="form-check">
          <%= f.radio_button :delivery_address, 'new_address', checked: @customer.delivery_address == 'new_address', class: 'custom-control-input', id: 'delivery-address-new-address' %>
          <%= f.label :delivery_address, '新しいお届け先', class: 'custom-control-label', for: 'delivery-address-new-address' %>
        </div>
        <table>
          <tr>
            <th><%= f.label :'郵便番号(ハイフンなし)' %></th>
            <td><%= f.text_field :%></td>
          </tr>
          <tr>
            <th><%= f.label :'住所' %></th>
            <td><%= f.text_field :%></td>
          </tr>
          <tr>
            <th><%= f.label :'宛名' %></th>
            <td><%= f.text_field :%></td>
          </tr>
        </table>
      </div>
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>