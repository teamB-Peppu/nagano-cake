<div class="container pt-5">
  <div class="row">
    <div class="col-md-8">
      <h3>注文情報入力</h3>
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <div class="form-group">
        <h5>支払方法</h5>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :payment_method, 'credit_card', checked: @order.payment_method == 'credit_card' %>
          <%= f.label :payment_method, 'クレジットカード' %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :payment_method, 'transfer', checked: @order.payment_method == 'transfer' %>
          <%= f.label :payment_method, '銀行振込' %>
        </div>
      </div>

      <div>
        <h5>お届け先</h5>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :delivery_address, 'my_address', checked: @order.address == 'my_address' %>
          <%= f.label :delivery_address, 'ご自身の住所' %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :delivery_address, 'address', checked: @order.address == 'address' %>
          <%= f.label :delivery_address, '登録住所' %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :delivery_address, 'new_address', checked: @order.address == 'new_address' %>
          <%= f.label :delivery_address, '新しいお届け先' %>
        </div>
        <table>
          <tr>
            <th><%= f.label :'郵便番号(ハイフンなし)' %></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th><%= f.label :'住所' %></th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th><%= f.label :'宛名' %></th>
            <td><%= f.text_field :name %></td>
          </tr>
        </table>
      </div>
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
